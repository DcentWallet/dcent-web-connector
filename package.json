{
  "name": "dcent-web-connector",
  "version": "0.7.0-beta",
  "description": "D'CENT Web SDK Connector",
  "main": "index.js",
  "scripts": {
    "dev": "npm run build-dev && webpack-dev-server --mode development",
    "build-dev": "webpack --mode development",
    "build": "webpack --mode production",
    "test": "jest --detectOpenHandles --coverage --forceExit --runInBand",
    "unit-mock": "jest --coverage --forceExit --runInBand 0_mock_test"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "globals": {
      "PATH": "http://localhost:9090"
    },
    "testEnvironment": "jsdom",
    "testSequencer": "./tests/testSequencer.js",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageDirectory": "tests/coverage",
    "collectCoverage": true,
    "setupFilesAfterEnv": [
      "./tests/jest.setup.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DcentWallet/dcent-web-connector.git"
  },
  "keywords": [
    "D'CENT",
    "dcent",
    "hardware wallet",
    "wallet sdk",
    "D'CENT biometric wallet",
    "dcent sdk",
    "dcent web sdk",
    "dcentwallet",
    "dcent web connector"
  ],
  "homepage": "https://github.com/DcentWallet/dcent-web-connector#readme",
  "author": "IoTrust Co. Ltd.,",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.9.4",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "expect-puppeteer": "^4.4.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "jest-puppeteer": "^4.4.0",
    "path": "^0.12.7",
    "puppeteer": "^2.1.1",
    "regenerator-runtime": "^0.13.3",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "events": "^3.0.0"
  },
  "license": "MIT"
}
